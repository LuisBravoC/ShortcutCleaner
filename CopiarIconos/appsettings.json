{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "CopiarIconos.IconMonitorService": "Debug"
    },
    "EventLog": {
      "LogLevel": {
        "Default": "Information",
        "CopiarIconos.IconMonitorService": "Information"
      },
      "SourceName": "IconMonitorService"
    }
  },
  "IconMonitor": {
    "SourcePath": "C:\\Windows\\Setup\\Files\\iconos",
    "MaxFileSizeBytes": 10485760,
    "EnableCleanup": true,
    "CheckIntervalMinutes": 60,
    "AllowedExtensions": [
      ".lnk",
      ".ico", 
      ".png",
      ".jpg",
      ".jpeg",
      ".bmp"
    ]
  },
  "WindowsService": {
    "ServiceName": "IconMonitorService",
    "DisplayName": "Monitor de Iconos",
    "Description": "Servicio que sincroniza archivos de iconos detectando escritorios automï¿½ticamente"
  }
}